<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="8dp">


    <ImageView
        android:id="@+id/ImageDish"
        android:layout_width="86dp"
        android:layout_height="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/ImageDish"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/tvCalories"
        app:layout_constraintStart_toStartOf="@+id/tvDishName"
        app:layout_constraintTop_toBottomOf="@+id/tvDishName" />

    <TextView
        android:id="@+id/tvDishRating"
        android:layout_width="28dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:text="3.9"
        app:layout_constraintBottom_toBottomOf="@+id/ImageDish"
        app:layout_constraintStart_toEndOf="@+id/ImageDish"
        app:layout_constraintTop_toBottomOf="@+id/tvDishCalories"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvDishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/tvDishRating"
        app:layout_constraintStart_toEndOf="@+id/tvDishRating"
        app:layout_constraintTop_toTopOf="@+id/tvDishRating"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvDishPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDishCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/tvDishPrice"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="@string/tvMinutes"
        app:layout_constraintStart_toEndOf="@+id/tvDishRating"
        app:layout_constraintTop_toBottomOf="@+id/tvDishCalories" />
</androidx.constraintlayout.widget.ConstraintLayout>
